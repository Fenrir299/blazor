// Components/Layout/MainLayout.razor
@inherits LayoutComponentBase
@using Microsoft.FluentUI.AspNetCore.Components

<FluentDesignSystemProvider>
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <h3>FFB - Proof of Concept</h3>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</FluentDesignSystemProvider>

<style>
    .page {
        position: relative;
        display: flex;
        flex-direction: row;
    }

    main {
        flex: 1;
    }

    .sidebar {
        background-color: #f3f3f3;
    }

    .top-row {
        background-color: #0078d4;
        color: white;
        border-bottom: 1px solid #d6d5d5;
        justify-content: flex-start;
        height: 3.5rem;
        display: flex;
        align-items: center;
    }

    .top-row h3 {
        margin: 0;
        padding: 0 1rem;
    }

    .content {
        padding-top: 1.1rem;
    }

    @media
    (max-width: 640.98px) {
        .page {
            flex-direction: column;
        }

        .sidebar {
            width: 100%;
        }
    }
</style>